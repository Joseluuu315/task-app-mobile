<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="?attr/actionBarSize"
    android:background="?attr/colorSurface">

    <!-- Description Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

    <!-- Description EditText with ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/edtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/descripci_n_completa"
            android:minLines="8"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant" />
    </ScrollView>

    <!-- File Attachment Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Archivos Adjuntos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="16dp" />

    <!-- ImageButtons for file types -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/btnAttachDocument"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/ic_document"
            android:contentDescription="Adjuntar documento"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btnAttachImage"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/ic_image_file"
            android:contentDescription="Adjuntar imagen"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btnAttachAudio"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/ic_audio"
            android:contentDescription="Adjuntar audio"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btnAttachVideo"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/ic_video"
            android:contentDescription="Adjuntar vídeo"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Display selected files -->
    <TextView
        android:id="@+id/txtSelectedFiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ningún archivo seleccionado"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/volver"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textAllCaps="false" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/guardar"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
