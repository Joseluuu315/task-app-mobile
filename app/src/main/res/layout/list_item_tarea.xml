<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="14dp"
    app:strokeWidth="1dp"
    app:strokeColor="#DDDDDD"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título + CheckBox -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tarea"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cbPrioritario"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cbPrioritario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prioritario"
            android:textSize="14sp"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="@id/txtTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/descripcion"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progreso -->
        <TextView
            android:id="@+id/txtProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progreso"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#1E1E1E"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtDescripcion" />

        <!-- Fecha inicio -->
        <EditText
            android:id="@+id/txtDate1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:hint="@string/fecha_inicio"
            android:background="#F4F4F4"
            android:inputType="date"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtDate2"
            app:layout_constraintTop_toBottomOf="@id/txtProgreso" />

        <!-- Fecha fin -->
        <EditText
            android:id="@+id/txtDate2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:padding="10dp"
            android:hint="@string/fecha_fin"
            android:background="#F4F4F4"
            android:inputType="date"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@id/txtDate1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtDate1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
