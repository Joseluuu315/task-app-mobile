<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListadoTareasActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloListado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tareas"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:textStyle="bold" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/txtTituloListado" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTareas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider" />

    <!-- Texto cuando no hay tareas -->
    <TextView
        android:id="@+id/txtNoTareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay tareas disponibles"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#888"
        android:visibility="gone"
        android:layout_centerInParent="true" />

</RelativeLayout>
